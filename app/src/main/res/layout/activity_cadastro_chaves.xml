<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroChavesActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:text="Cadastrar Chave PIX"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editText_chave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insira a chave"
            android:inputType="text" />

        <RadioGroup
            android:id="@+id/radioGroup_tipo_chave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <RadioButton
                android:id="@+id/radioButton_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone" />
            <RadioButton
                android:id="@+id/radioButton_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF" />
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cadastrar_chave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Chave"
            android:layout_marginTop="16dp"
            android:onClick="cadastrarChave" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_remover_chave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remover Chave"
            android:layout_marginTop="8dp"
            android:onClick="removerChave" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
